<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" />

    <style name="AppTheme.Dark" parent="Theme.MaterialComponents.NoActionBar">
        <item name="appSubTextColor">@color/colorDefaultSubText</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="appTextColor">@color/colorDefaultTextDark</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.App.Large</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.App.Medium</item>
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.App.Small</item>
        <item name="appBackground">@color/materialGrey</item>
        <item name="colorSurface">@color/materialGrey</item>
        <item name="appStrokeColor">@android:color/white</item>
        <item name="appTextSecondaryColor">@color/colorDefaultTextLight</item>
    </style>

    <style name="AppTheme.Light" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="appSubTextColor">@color/colorDefaultSubText</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="appTextColor">@color/colorDefaultTextLight</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.App.Large</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.App.Medium</item>
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.App.Small</item>
        <item name="appBackground">@android:color/white</item>
        <item name="colorSurface">@android:color/white</item>
        <item name="appStrokeColor">@android:color/black</item>
        <item name="appTextSecondaryColor">@color/colorDefaultTextDark</item>
    </style>

    <style name="AppTheme.Dark.Pure">
        <item name="colorAccent">@color/colorAccentPure</item>
        <item name="appAccentBackground">@color/colorAccentBackgroundPure</item>
        <item name="colorPrimary">@color/colorPrimaryPure</item>
        <item name="colorPrimaryDark">@color/colorPrimaryPure</item>
        <item name="appBackground">@color/colorBackgroundPure</item>
        <item name="colorSurface">@color/colorPrimaryPure</item>
        <item name="colorOnSurface">@color/colorAccentPure</item>
        <item name="colorSecondary">@color/colorSecondaryPure</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryVariantPure</item>
    </style>

    <style name="AppTheme.Light.White">
        <item name="colorAccent">@color/colorAccentWhite</item>
        <item name="appAccentBackground">@color/colorAccentBackgroundWhite</item>
        <item name="colorPrimary">@color/colorPrimaryWhite</item>
        <item name="colorPrimaryDark">@color/colorPrimaryWhite</item>
        <item name="appBackground">@color/colorBackgroundWhite</item>
        <item name="colorSurface">@color/colorPrimaryWhite</item>
        <item name="colorOnSurface">@color/colorAccentWhite</item>
        <item name="colorSecondary">@color/colorSecondaryWhite</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryVariantWhite</item>
    </style>

    <style name="AppTheme.Light.Amber">
        <item name="colorAccent">@color/colorAccentAmber</item>
        <item name="appAccentBackground">@color/colorAccentBackgroundAmber</item>
        <item name="colorPrimary">@color/colorPrimaryAmber</item>
        <item name="colorPrimaryDark">@color/colorPrimaryAmber</item>
        <item name="appBackground">@color/colorBackgroundAmber</item>
        <item name="appSubTextColor">@color/colorSubTextAmber</item>
        <item name="colorSurface">@color/colorPrimaryAmber</item>
        <item name="colorOnSurface">@color/colorAccentAmber</item>
        <item name="colorSecondary">@color/colorSecondaryAmber</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryVariantAmber</item>
    </style>

    <style name="AppTheme.Light.Yun">
        <item name="colorAccent">@color/colorAccentYun</item>
        <item name="appAccentBackground">@color/colorAccentBackgroundYun</item>
        <item name="colorPrimary">@color/colorPrimaryYun</item>
        <item name="colorPrimaryDark">@color/colorPrimaryYun</item>
        <item name="appBackground">@color/colorBackgroundYun</item>
        <item name="appSubTextColor">@color/colorSubTextYun</item>
        <item name="colorSurface">@color/colorPrimaryYun</item>
        <item name="colorOnSurface">@color/colorSecondaryVariantYun</item>
        <item name="colorSecondary">@color/colorSecondaryYun</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryVariantYun</item>
    </style>

    <style name="AppTheme.Dark.ZeroGoPurple">
        <item name="colorAccent">@color/colorAccentZGPurple</item>
        <item name="appAccentBackground">@color/colorAccentBackgroundZGPurple</item>
        <item name="colorPrimary">@color/colorPrimaryZGPurple</item>
        <item name="colorPrimaryDark">@color/colorPrimaryZGPurple</item>
        <item name="appBackground">@color/colorBackgroundZGPurple</item>
        <item name="appSubTextColor">@color/colorSubTextZGPurple</item>
        <item name="colorSurface">@color/colorPrimaryZGPurple</item>
        <item name="colorOnSurface">@color/colorSecondaryVariantZGPurple</item>
        <item name="colorSecondary">@color/colorSecondaryZGPurple</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryVariantZGPurple</item>
    </style>

    <style name="AppTheme.Dark.Teal">
        <item name="colorAccent">@color/colorAccentTeal</item>
        <item name="appAccentBackground">@color/colorAccentBackgroundTeal</item>
        <item name="colorPrimary">@color/colorPrimaryTeal</item>
        <item name="colorPrimaryDark">@color/colorPrimaryTeal</item>
        <item name="appBackground">@color/colorBackgroundTeal</item>
        <item name="appSubTextColor">@color/colorSubTextTeal</item>
        <item name="colorSurface">@color/colorPrimaryTeal</item>
        <item name="colorOnSurface">@color/colorAccentTeal</item>
        <item name="colorSecondary">@color/colorSecondaryTeal</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryVariantTeal</item>
    </style>

    <style name="AppTheme.Dark.Pink">
        <item name="colorAccent">@color/colorAccentPink</item>
        <item name="appAccentBackground">@color/colorAccentBackgroundPink</item>
        <item name="colorPrimary">@color/colorPrimaryPink</item>
        <item name="colorPrimaryDark">@color/colorPrimaryPink</item>
        <item name="appBackground">@color/colorBackgroundPink</item>
        <item name="appSubTextColor">@color/colorSubTextPink</item>
        <item name="colorSurface">@color/colorPrimaryPink</item>
        <item name="colorOnSurface">@color/colorAccentPink</item>
        <item name="colorSecondary">@color/colorSecondaryPink</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryVariantPink</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.ActionBar">
        <item name="elevation">10dp</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.MaterialComponents">
        <item name="elevation">10dp</item>
    </style>

    <style name="AppTheme.Layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">?attr/appBackground</item>
    </style>

    <style name="AppTheme.Layout.Activity">
        <item name="android:layout_height">match_parent</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>

    <style name="AppTheme.Layout.Fragment">
        <item name="android:transitionGroup">true</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="AppTheme.Layout.Dialog">
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="AppTheme.Layout.Card" parent="AppTheme.Layout.Dialog">
        <item name="android:layout_margin">2dp</item>
        <item name="android:checkable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:longClickable">true</item>
        <item name="android:padding">2dp</item>
        <item name="cardElevation">0dp</item>
        <item name="cardPreventCornerOverlap">false</item>
        <item name="strokeColor">?attr/appStrokeColor</item>
        <item name="strokeWidth">0.1dp</item>
    </style>

    <style name="AppTheme.Layout.Card.Warning">
        <item name="strokeWidth">0dp</item>
        <item name="cardBackgroundColor">?attr/colorAccent</item>
    </style>

    <style name="AppTheme.ToolBarStyle">
        <item name="titleTextAppearance">@style/TextAppearance.Widget.Event.Toolbar.Title</item>
        <item name="android:background">?attr/colorPrimary</item>
    </style>

    <style name="TextAppearance.Widget.Event.Toolbar.Title" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <!--Any text styling can be done here-->
        <!--        <item name="android:textSize">@dimen/text_size_title</item>-->
        <item name="android:textColor">?attr/appTextColor</item>
    </style>

    <style name="AppTheme.Button.OutlinedIcon" parent="Widget.MaterialComponents.Button.OutlinedButton.Icon">
        <item name="strokeColor">?attr/colorAccent</item>
        <item name="strokeWidth">2dp</item>
        <item name="iconTint">?attr/colorAccent</item>
    </style>

    <style name="ShapeAppearance.App.Large" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">20dp</item>
    </style>

    <style name="ShapeAppearance.App.Medium" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">12dp</item>
    </style>

    <style name="ShapeAppearance.App.Small" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">1dp</item>
    </style>

    <style name="AppTheme.TextView">
        <item name="android:textColor">?attr/appTextColor</item>
        <item name="android:ellipsize">end</item>
        <item name="android:text">TextViewTest</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="AppTheme.TextView.Big">
        <item name="android:textSize">@dimen/text_size_xxl</item>
    </style>

    <style name="AppTheme.TextView.Normal">
        <item name="android:textSize">@dimen/text_size_xl</item>
    </style>

    <style name="AppTheme.TextView.Small">
        <item name="android:textSize">@dimen/text_size_m</item>
    </style>

    <style name="AppTheme.TextView.SuperSmall">
        <item name="android:textSize">@dimen/text_size_s</item>
        <item name="android:textColor">?attr/appTextSecondaryColor</item>
    </style>

    <style name="Widget.App.BottomAppBar" parent="Widget.MaterialComponents.BottomAppBar.Colored">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.BottomAppBar</item>
    </style>

    <style name="Widget.App.FloatingActionButton" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.FloatingActionButton</item>
    </style>

    <style name="ThemeOverlay.App.BottomAppBar" parent="">
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.App.Small</item>
    </style>

    <style name="ThemeOverlay.App.FloatingActionButton" parent="">
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.App.Small</item>
    </style>
</resources>
