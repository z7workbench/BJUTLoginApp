<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/loginCard"
    style="@style/AppTheme.Layout.Card">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/userButton"
            style="@style/AppTheme.Button.OutlinedIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:clickable="true"
            android:focusable="true"
            android:text="User"
            android:textColor="?attr/colorAccent"
            android:transitionName="user_transition"
            app:icon="@drawable/ic_group_small"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/percentBar" />

        <ImageButton
            android:id="@+id/collapse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            android:backgroundTint="@color/transparent"
            android:clickable="true"
            android:contentDescription="collapse"
            android:focusable="true"
            android:src="@drawable/ic_hide"
            app:layout_constraintBottom_toBottomOf="@id/title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/title" />

        <TextView
            android:id="@+id/user"
            style="@style/AppTheme.TextView.Big"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/percentBar"
            app:layout_constraintTop_toBottomOf="@id/status"
            app:layout_constraintTop_toTopOf="@id/percentBar"
            app:layout_constraintVertical_bias="0.5" />

        <TextView
            android:id="@+id/flux"
            style="@style/AppTheme.TextView.Normal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="@id/percentBar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/percentBar"
            app:layout_constraintVertical_bias="0.5" />

        <TextView
            android:id="@+id/status"
            style="@style/AppTheme.TextView.Normal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintBottom_toTopOf="@id/flux"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/percentBar"
            app:layout_constraintTop_toBottomOf="@id/user"
            app:layout_constraintVertical_bias="0.5" />

        <TextView
            android:id="@+id/title"
            style="@style/AppTheme.TextView.Normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="24dp"
            android:textSize="@dimen/text_size_h"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <xin.z7workbench.zeropercent.ArcPercentBar
            android:id="@+id/percentBar"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            app:arcBackColor="?attr/appAccentBackground"
            app:arcFrontColor="?attr/colorAccent"
            app:arcOrientation="left"
            app:arcRange="280"
            app:arcStrokeWidth="6dp"
            app:arcTextColor="?attr/colorAccent"
            app:arcTextSize="@dimen/text_size_s"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>